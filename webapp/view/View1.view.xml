<mvc:View
    controllerName="test_a.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="View1Page" title="View1 Page">
        <content>
            <Button
                id="View1_btnClickMe"
                text="Click Me"
                press=".onButtonPress" />
            <Button
                id="View1_btnNavBack"
                text="Go Back"
                press=".onNavBack" />

            <Input
                id="View1_inputExample"
                placeholder="Type something..."
                liveChange=".onInputChange" />

            <Select
                id="View1_selectExample"
                change=".onSelectChange">
                <items>
                    <core:Item id="View1_selectExample_Item1" key="1" text="Option 1"/>
                    <core:Item id="View1_selectExample_Item2" key="2" text="Option 2"/>
                </items>
            </Select>
        </content>
    </Page>
</mvc:View>
